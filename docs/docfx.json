{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "FlexLib/**/*.csproj",
            "Vita/**/*.csproj",
            "Util/**/*.csproj",
            "UiWpfFramework/**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "properties": {
        "TargetFramework": "net8.0-windows"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "*.md",
          "toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "FlexLib API Documentation",
      "_appName": "FlexLib",
      "_appFooter": "Copyright Â© 2018-2024 FlexRadio Systems. All rights reserved.",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableContribution": false,
      "_gitContribute": {
        "repo": "https://github.com/flexradio/flexlib",
        "branch": "main"
      }
    },
    "fileMetadata": {
      "_layout": {
        "api/**.yml": "ApiPage"
      }
    }
  }
}
